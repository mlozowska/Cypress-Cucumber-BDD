{
  "name": "cypress-cucumber-bdd",
  "version": "1.0.0",
  "description": "Cypress and Cucumber BDD with POM",
  "main": "index.js",
  "scripts": {
    "full-regression-headed-chrome": "cypress run --headed --browser chrome --spec 'cypress/e2e/*.feature'",
    "full-regression-headless-chrome": "cypress run --browser chrome --spec 'cypress/e2e/*.feature'",
    "search-page-headed-chrome": "cypress run --headed --browser chrome --spec 'cypress/e2e/searchPage.feature'",
    "cypress:smoke": "cypress run -e TAGS='@smoke' --headed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlozowska/Cypress-Cucumber-BDD.git"
  },
  "keywords": [
    "cypress",
    "cucumber",
    "bdd",
    "page-object-model",
    "reports",
    "jenkins"
  ],
  "author": "Magdalena Lozowska-Pereira",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mlozowska/Cypress-Cucumber-BDD/issues"
  },
  "homepage": "https://github.com/mlozowska/Cypress-Cucumber-BDD#readme",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^15.1.4",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^12.7.0",
    "typescript": "^4.9.5"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/support/step_definitions/**/*.js",
    "html": {
      "enabled": true,
      "output": "cypress/reports/cucumber-html/cucumber-report.html"
    },
    "messages": {
      "enabled": true,
      "output": "cypress/reports/cucumber-ndjson/cucumber-report.ndjson"
    }
  }
}
